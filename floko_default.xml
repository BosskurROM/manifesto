<?xml version="1.0" encoding="UTF-8"?>
<manifest>

  <remote name="floko"
          fetch="https://github.com/FlokoROM"
          revision="refs/heads/p9.0" />

  <!-- Remove unused projects -->
  <remove-project name="AICP/platform_manifest" />
  <remove-project name="AICP/build" />
  <remove-project name="AICP/frameworks_base" />
  <remove-project name="AICP/packages_apps_AicpExtras"/>
  <remove-project name="AICP/packages_apps_Settings" />
  <remove-project name="AICP/vendor_aicp" />
  <remove-project name="android_packages_apps_Phonograph" />
  <remove-project name="platform/external/chromium-webview" />
  <remove-project name="platform/packages/apps/Gallery2" />

  <!-- FlokoROM repositories -->
  <project path="manifesto" name="manifesto" remote="floko" />
  <project path="build/make" name="build" remote="floko" groups="pdk" >
    <copyfile src="core/root.mk" dest="Makefile" />
    <linkfile src="CleanSpec.mk" dest="build/CleanSpec.mk" />
    <linkfile src="buildspec.mk.default" dest="build/buildspec.mk.default" />
    <linkfile src="core" dest="build/core" />
    <linkfile src="envsetup.sh" dest="build/envsetup.sh" />
    <linkfile src="target" dest="build/target" />
    <linkfile src="tools" dest="build/tools" />
  </project>
  <project path="frameworks/base" name="frameworks_base" remote="floko" />
  <project path="packages/apps/AicpExtras" name="packages_apps_Extras" remote="floko" />
  <project path="packages/apps/Settings" name="packages_apps_Settings" remote="floko" />
  <project path="vendor/aicp" name="vendor_floko" remote="floko" />

  <!-- OmniROM repositories -->
  <project path="packages/apps/OmniSwitch" name="android_packages_apps_OmniSwitch" remote="omni" />

  <!-- LineageOS repositories -->
  <project name="android_external_chromium-webview" path="external/chromium-webview" clone-depth="1" remote="lineage" />
  <project name="android_packages_apps_Gallery2" path="packages/apps/Gallery2" remote="lineage" />

</manifest>
